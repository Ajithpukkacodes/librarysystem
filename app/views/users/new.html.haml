%p new user
= form_with model: @user,local: true   do |f|
  - if @user.errors.any?
    #error_explanation
    %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
    %ul
      - @user.errors.full_messages.each do|er|
        %li
          = er
  %div
    = f.label :name
    %br/
    = f.text_field :name,placeholder: "user name"
  %div
    = f.label :email
    %br/
    = f.text_field :email, placeholder: "Email"
  %div
    = f.label :password
    %br/
    = f.password_field :password, placeholder: "password"
  %div
    = f.label :password_confirmation 
    %br/
    = f.password_field :password_confirmation, placeholder: "retype password"
  %div
    = f.label :address
    %br/
    = f.text_field :address,placeholder: "address"
  %div
    = f.label :phone, "Phone Number"
    %br/
    = f.text_field :phone, placeholder: "mobile no"
  - if current_user&&current_user.admin?
    %div
      = f.label :is_admin, "Admin?"
      = f.check_box :is_admin, {}, "admin"       
  .actions
    = f.submit :class => 'btn btn-primary'      