%h1 userlist
%table
 %thead
  %tr
   %th name
   %th Email
   %th address
   %th phone
   %th{colspan: 3}
 %tbody
 - @users.each do |user|
  %tr
   %td= user.name
   %td= user.email
   %td= user.address
   %td= user.phone
   %td= link_to "edit", edit_user_path(user)
   %td= link_to("delete",user_path(user),method: :delete,data: {confirm:"are you sure"})
   %br/
= link_to 'Add New User', new_user_path 